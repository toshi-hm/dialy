#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running lint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "❌ Lint check failed. Commit aborted."
  exit 1
fi

echo "Running format check..."
pnpm format:check
if [ $? -ne 0 ]; then
  echo "❌ Format check failed. Commit aborted."
  exit 1
fi

echo "✓ All checks passed!"
